{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{{ form_errors(form) }}
<div class="form-group">
    {{ form_widget(form.username, {'attr': {'placeholder': 'Username', 'class': 'form-control input-lg c-square'}}) }}
</div>
<div class="form-group">
    {{ form_widget(form.email, {'attr': {'placeholder': 'Email', 'class': 'form-control input-lg c-square'}}) }}
</div>
<div class="form-group">
    {{ form_widget(form.password.first, {'attr': {'placeholder': 'Password', 'class': 'form-control input-lg c-square'}}) }}
</div>
<div class="form-group">
    {{ form_widget(form.password.second, {'attr': {'placeholder': 'Repeat Password', 'class': 'form-control input-lg c-square'}}) }}
</div>
<div class="form-group">
    {{ form_widget(form.create, {'label': 'Signup', 'attr': {'class': 'c-theme-btn btn-md c-btn-login'}}) }}
    <a href="javascript:;" class="c-btn-forgot" data-toggle="modal" data-target="#login-form" data-dismiss="modal">{% trans %}Back To Login{% endtrans %}</a>
</div>
{{ form_end(form) }}