{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    <div class="c-layout-breadcrumbs-1 c-fonts-uppercase c-fonts-bold c-bordered c-bordered-both">
        <div class="container">
            <div class="c-page-title c-pull-left">
                <h3 class="c-font-uppercase c-font-sbold">Songs</h3>
            </div>
            <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                <li>
                    <a href="{{ path('songs_index') }}">Songs</a>
                </li>
                <li>/</li>
                <li class="c-state_active">
                    <a href="{{ path('songs_create') }}">Create</a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    
    {{ form_errors(form) }}

    {{ form_row(form.song_group) }}
    {{ form_row(form.title) }}
    {{ form_row(form.song_no) }}
    {{ form_row(form.lang) }}

    <div class="verses" data-prototype="{{ form_widget(form.verses.vars.prototype)|e }}">
        {% for verse in form.verses %}
            {% set i = i + 1 %}
            {{ form_row(verse.verse, { 'label': 'Verse ' ~ i}) }}
        {% endfor %}
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-md-8" id="button-spot">
            {{ form_widget(form.add_verse, {'attr': {'class': 'btn-default add-verse-link'}}) }}
            {{ form_widget(form.submit) }}
        </div>
    </div>

    
    {{ form_end(form) }}
{% endblock %}