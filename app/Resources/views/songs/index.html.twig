{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    {{ form_row(form.song_group) }}
    {{ form_end(form) }}

    {% if (pagination is not null) %}

        <table>
        <tr>
            <td>ID</td><td>Song Number</td><td>Title</td>
        </tr>
        {% for song in pagination %}
            <tr>
                <td><a href="{{ path('songs_edit', {'id': song.id}) }}">{{ song.id }}</a></td>
                <td>{{ song.songno }}</td>
                <td>{{ song.title }}</td>
            </tr>
        {% endfor %}
        </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    {% endif %}
{% endblock %}